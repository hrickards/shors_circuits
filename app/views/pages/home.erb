<div class="container" id="pageContainer">
  <div class="jumbotron">
    <h1>Welcome...</h1>
    <p>Explanatory text about Shor's Circuits here</p>
    <p><a class="btn btn-primary btn-lg" href="<%= url_for(:pages, :about) %>">Learn more</a></p>
  </div>

  Put some more things here

  <% if signed_in? %>
    <div class="panel panel-default" id="userCircuits">
      <div class="panel-heading">
        <h3 class="panel-title">My Circuits</h3>
      </div>
      <div class="panel-body">
        <ul class="nav nav-pills nav-stacked">
          <% @circuits.each do |cid, circuits, modified| %>
            <li>
              <%= circuits.first.name %>
              <ul id="horizontalCircuitIterations">
                <% circuits.each do |circuit| %>
                  <li><a href="<%= url_for(:circuits, :show, :c_id => cid, :v_id => circuit.v_id) %>"><span class="badge"><%= circuit.v_id %></span></a></li>
                <% end %>
              </ul>
            </li>
          <% end %>
          <% if @circuits.empty? %>
            You don't appear to have any circuits yet! Would you like to <a href="<%= url_for(:circuits, :show) %>">create one</a>?
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
</div>
