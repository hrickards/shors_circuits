<% content_for :head do %>
  <%= javascript_include_tag 'home' %>
<% end %>
<div class="container" id="pageContainer">
  <div class="jumbotron" id="newJumbotron">
    <div class="row">
      <div class="col-md-8">
        <h1>Quantum Circuit Simulation</h1>
        <div class="row">
          <div class="col-md-4">
            <ul>
              <li>Schematic Drawing</li>
              <li>Symbolic Simulation</li>
            </ul>
          </div>
          <div class="col-md-4">
            <ul>
              <li>Collaboration</li>
              <li>Free and easy to use</li>
            </ul>
          </div>
        </div>
        <div class="row">
          <div class="col-md-10">
          </div>
          <div class="col-md-2">
            <p><a class="btn btn-primary btn-xlarge rightButton" href="<%= url_for(:circuits, :show) %>">Create Circuit</a></p>
          </div>
        </div>
      </div>
      <div class="col-md-4 noOverlap">
        <a href="<%= url_for(:circuits, :show) %>" class="thumbnail">
          <img src="/images/qt.png" alt="Quantum Teleportation Circuit">
        </a>
      </div>
    </div>
  </div>

  <% if signed_in? %>
    <div class="row">
      <div class="col-md-8">
        Welcome back <%= current_user.name.split(" ").first %>. Would you like to <a href="<%= url_for(:circuits, :index) %>">View Circuits</a> or <a href="<%= url_for(:circuits, :show) %>">Create a Circuit</a>?
      </div>
      <div class="col-md-4">
        <div class="panel panel-default" id="userCircuits">
          <div class="panel-heading">
            <h3 class="panel-title">My Circuits</h3>
          </div>
          <div class="panel-body">
            <%= @my_circuits %>
          </div>
        </div>
      </div>
    </div>
  <% else %>
    <%= @examples %>
  <% end %>
</div>
